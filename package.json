{
  "name": "claude-code-coordination",
  "version": "3.0.0",
  "description": "Claude Code Coordination - Enterprise AI Development Platform",
  "type": "module",
  "main": "packages/cli/dist/index.js",
  "bin": {
    "krins": "packages/cli/dist/krins-cli.js",
    "magic": "packages/cli/dist/magic-cli.js"
  },
  "scripts": {
    "build": "pnpm run build:packages && npm run package",
    "build:packages": "pnpm --filter=\"@claude-coordination/*\" run build",
    "dev": "pnpm --filter=\"@claude-coordination/server\" run dev",
    "dev:all": "pnpm --parallel --filter=\"@claude-coordination/*\" run dev",
    "start": "pnpm --filter=\"@claude-coordination/server\" run start",
    "test": "pnpm --filter=\"@claude-coordination/*\" run test",
    "lint": "pnpm --filter=\"@claude-coordination/*\" run lint",
    "clean": "pnpm --filter=\"@claude-coordination/*\" run clean",
    "package": "mkdir -p dist && tar -czf dist/claude-code-coordination-v3.0.0.tar.gz --exclude=node_modules --exclude=.git --exclude=dist .",
    "magic": "pnpm --filter=\"@claude-coordination/cli\" run magic",
    "metrics": "node scripts/metrics.cjs",
    "install-global": "npm install -g .",
    "uninstall-global": "npm uninstall -g claude-code-coordination"
  },
  "keywords": [
    "claude",
    "ai",
    "coordination",
    "enterprise",
    "development",
    "automation",
    "cli",
    "vscode",
    "monorepo"
  ],
  "author": "Claude Code Coordination Team",
  "license": "MIT",
  "dependencies": {
    "uuid": "^10.0.0",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.6",
    "ws": "^8.14.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "typescript": "^5.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  },
  "packageManager": "pnpm@8.15.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mandymgr/claude-code-coordination.git"
  },
  "bugs": {
    "url": "https://github.com/mandymgr/claude-code-coordination/issues"
  },
  "homepage": "https://claude-coordination.vercel.app",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}