# Production Environment Configuration
NODE_ENV=production
PORT=8080

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=claude_coordination_prod
POSTGRES_USER=claude
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Performance Tuning
MAX_MEMORY_MB=4096
GC_INTERVAL_MS=60000
TENSOR_LEAK_THRESHOLD=500
ENABLE_TENSOR_TRACKING=true
ENABLE_GC=true

# Connection Pooling
PG_POOL_MAX=30
PG_POOL_MIN=5
PG_IDLE_TIMEOUT=45000
PG_CONNECTION_TIMEOUT=15000
PG_STATEMENT_TIMEOUT=60000
PG_QUERY_TIMEOUT=60000
PG_MAX_RETRIES=5
PG_RETRY_DELAY=2000

REDIS_POOL_MAX=15
REDIS_POOL_MIN=5
REDIS_IDLE_TIMEOUT=45000
REDIS_COMMAND_TIMEOUT=15000
REDIS_CONNECT_TIMEOUT=15000
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=2000

# Monitoring & Observability
POOL_MONITORING=true
POOL_METRICS_INTERVAL=30000
SLOW_QUERY_THRESHOLD=2000

# Lazy Loading Configuration
LAZY_CACHE_TIMEOUT=600000
LAZY_CACHE_SIZE=200
LAZY_METRICS=true

# Security
JWT_SECRET=your_super_secure_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# API Keys (replace with actual keys)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here
GOOGLE_AI_API_KEY=your-google-ai-key-here

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Telemetry & OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=https://your-telemetry-endpoint
SERVICE_VERSION=3.0.0

# Performance Testing (disabled in production)
ENABLE_LOAD_TESTING=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# TLS/SSL (for production deployment)
HTTPS_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=10
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000

# AutoML Configuration
AUTOML_MAX_CONCURRENT_SEARCHES=5
AUTOML_MAX_GENERATIONS=50
AUTOML_POPULATION_SIZE=50
AUTOML_ENABLE_GPU=false

# Blockchain Configuration
BLOCKCHAIN_PROVIDER_ETHEREUM=https://mainnet.infura.io/v3/your-infura-key
BLOCKCHAIN_PROVIDER_POLYGON=https://polygon-mainnet.infura.io/v3/your-infura-key
ENABLE_BLOCKCHAIN_FEATURES=false

# Voice Interface Configuration
ENABLE_VOICE_FEATURES=false
WHISPER_MODEL_SIZE=base
VOICE_CACHE_DURATION=3600000

# Quantum Computing Configuration
ENABLE_QUANTUM_FEATURES=false
QUANTUM_SIMULATOR_BACKEND=qiskit

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_PATH=/tmp/uploads
ALLOWED_FILE_TYPES=.txt,.md,.json,.csv,.pdf,.png,.jpg,.jpeg

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups