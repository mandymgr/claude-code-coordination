# Server Configuration
PORT=8080
NODE_ENV=development
SERVICE_VERSION=3.0.0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/claude_coordination
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=claude_coordination
DATABASE_USER=claude_user
DATABASE_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=2592000
BCRYPT_ROUNDS=12
MFA_ISSUER=Claude Coordination
MFA_WINDOW=2

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8080/api/auth/oauth/google/callback

MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:8080/api/auth/oauth/microsoft/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:8080/api/auth/oauth/github/callback

# SAML Configuration
SAML_ENTRY_POINT=https://your-idp.com/sso/saml
SAML_ISSUER=claude-coordination
SAML_CALLBACK_URL=http://localhost:8080/api/auth/saml/callback
SAML_CERT=path/to/idp-certificate.crt
SAML_PRIVATE_KEY=path/to/sp-private-key.pem

# OpenTelemetry & Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=claude-coordination
OTEL_SERVICE_VERSION=3.0.0
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
LOGIN_RATE_LIMIT_MAX=5

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://krins.dev

# Session Configuration
SESSION_TIMEOUT_HOURS=8
SESSION_EXTEND_THRESHOLD_MINUTES=30
MAX_CONCURRENT_SESSIONS=3

# Audit & Compliance
AUDIT_LOG_RETENTION_DAYS=2555
COMPLIANCE_STANDARDS=SOX,GDPR,HIPAA
AUDIT_LOG_FORMAT=jsonl

# Security Headers
CSP_REPORT_URI=/api/csp-report
HSTS_MAX_AGE=31536000

# File Upload Limits
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=.json,.yaml,.yml,.txt,.md

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Development Mode
DEBUG=claude:*
MOCK_AUTH=false
SKIP_AUTH=false