{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    
    // Maximum Performance Optimization
    "incremental": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo-core",
    
    // Ultra-Fast Type Checking
    "strict": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    
    // Output Optimization
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "importsNotUsedAsValues": "remove",
    
    // Standard Options
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"]
  },
  "include": [
    "src/server.ts",
    "src/middleware/**/*",
    "src/routes/auth.ts",
    "src/routes/coordination.ts",
    "src/routes/collaboration.ts",
    "src/database/**/*",
    "src/utils/telemetry.ts",
    "src/observability/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.backup",
    "**/services-*/**/*",
    "src/services/**/*",
    "src/routes/analytics.ts",
    "src/routes/commercial.ts",
    "src/routes/integrations.ts",
    "src/routes/performance.ts",
    "src/routes/automl.ts",
    "src/routes/blockchain.ts",
    "src/routes/quantum.ts",
    "src/routes/voice.ts"
  ]
}